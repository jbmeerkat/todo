= form_for @story, :html => {:class => 'form-horizontal'} do |f|
  %fieldset
    %legend= t('edit_story')
    .control-group
      = f.label :name, :class => 'control-label'
      .controls
        = f.text_field :name, :class => 'input-xxlarge'
    .control-group
      = f.label :description, :class => 'control-label'
      .controls
        = f.text_area :description, :class => 'input-xxlarge', :rows => 7
    .control-group
      .controls
        = f.submit t('submit'), :class => 'btn'
        or
        = link_to t('cancel'), @story
