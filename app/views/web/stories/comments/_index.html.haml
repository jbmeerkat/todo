%ul.media-list
  - if comments.empty?
    %li.media.text-center
      = glyph 'user-md'
      No comments yet =/
  -else
    - comments.each do |comment|
      %li.media
        .pull-left= glyph 'comment'
        .media-body
          .media-heading
            .pull-right= time_ago_in_words(comment.created_at) + ' ago'
            %strong= comment.author.email
            wrote:
          = comment.body
