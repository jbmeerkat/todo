= search_form_for @q, :class => 'form-inline', :id => 'story-filter-form' do |f|
  = f.collection_select :owner_id_or_performer_id_eq, User.all, :id, :email, :prompt => 'Select user'
  = f.collection_select :state_eq, Story.state_machine.states, :name, :value, :prompt => 'Select state'
  = link_to 'Reset filters', stories_path